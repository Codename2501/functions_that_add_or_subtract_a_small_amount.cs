//Integrating ,For Exp(x)
using System.Numerics;

class starting_point
{
    public starting_point()
    {
        double x = 0.0;//A threshold exists depending on the function.
        double x2 = 1.0;//not 0;
        double t= (Math.Log((Math.Exp(x2) - 1.0) * Math.Exp(x) / x2) - x)/ x2;//Coefficient for exp
        Console.WriteLine("{0}\n{1}\n", x2 * Function(x+x2*t), Integral(x+x2) - Integral(x));
    }
    private double Integral(double x)
    {
        return Math.Exp(x);
    }
    private double Function(double x)
    {
        //Any elementary function is generally acceptable in any form.
        return Math.Exp(x);
    }
    [STAThread]
    public static void Main()
    {
        new starting_point();
    }
}
